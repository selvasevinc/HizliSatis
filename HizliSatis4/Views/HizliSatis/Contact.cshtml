
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact" style="margin-top:50px">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <p style="text-align:center; font-size:32px">Bizimle İletişime Geçin</p>
        </div>

        <div class="row">
            <div class="col-lg-4" data-aos="fade-right" data-aos-delay="100">
                <div class="info">
                    <div class="address">
                        <i class="icofont-google-map"></i>
                        <h4>Adres:</h4>
                        <p>Düzce Üniversitesi Teknopark - Orhangazi Mah Teknopark Cad. No:1 Kat:2, 81100 Merkez/Düzce</p>
                    </div>

                    <div class="email">
                        <i class="icofont-envelope"></i>
                        <h4>Email:</h4>
                        <p>bilgi@bilsoft.com</p>
                    </div>

                    <div class="phone">
                        <i class="icofont-phone"></i>
                        <h4>Telefon:</h4>
                        <a href="tel:+902129122426" title="Telefon">(0212) 912 24 26</a>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left" data-aos-delay="200">
                @model HizliSatis4.Models.Email
                <form method="post" role="form" id="form" class="php-email-form">
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="ad" class="form-control" id="ad" placeholder="Ad" data-rule="minlen:4" data-msg="En az 4 karakter yazın" />
                            
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email" data-rule="email" data-msg="Lütfen email adresinizi yazın" />
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="konu" id="konu" placeholder="Konu" data-rule="minlen:4" data-msg="En az 8 karakter yazın" />
                        
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="mesaj" id="mesaj" rows="2" data-rule="required" placeholder="Mesaj"></textarea>
                      
                    </div>
                    <div class="mb-3">
                        <div class="loading">Yükleniyor</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Mesajınız başarıyla gönderildi!</div>
                    </div>
                    <div class="text-center"><button type="button" class="btn btn-get-started">Gönder</button></div>
                </form>

            </div>

        </div>
</section><!-- End Contact Section -->
